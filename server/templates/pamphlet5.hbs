<html>

    <head>
        <meta charset="utf-8" />
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
        <style>
            @page {
                size: A4 landscape;
                margin: 0;
            }

            html,
            body {
                margin: 0;
                padding: 0;
            }

            .page {
                width: 1122px;
                height: 794px;
                page-break-after: always;
                overflow: hidden;
            }
        </style>
    </head>

    <body class="bg-white text-black font-sans">
        {{#each pages}}
        <div class="page flex flex-col">
            <!-- Header -->
            <header class="h-[80px] flex justify-center items-center px-4">
                {{#if ../banner_image}}
                <img src="{{../banner_image}}" alt="Banner" class="w-full h-full object-cover rounded-md" />
                {{else}}
                <div class="text-center w-full">
                    <h1 class="text-2xl font-extrabold text-green-800 tracking-wide">{{../title}}</h1>
                    {{#if ../is_festive}}
                    <p class="text-lg text-yellow-600 font-semibold">ðŸŽ‰ Festive Offer â€“ Limited Time Only! ðŸŽ‰</p>
                    {{/if}}
                </div>
                {{/if}}
            </header>

            <!-- Product Grid -->
            <main class="flex-grow overflow-hidden px-2 py-1">
                <div class="w-full h-full grid gap-1"
                    style="grid-template-columns: repeat({{../cols}}, 1fr); grid-template-rows: repeat({{../rows}}, 1fr);">
                    {{#each this}}
                    <div class="border border-gray-300 rounded-md overflow-hidden flex flex-col p-1">

                        <!-- Main content -->
                        <div class="flex flex-grow">
                            <!-- Left: Image -->
                            <div class="w-1/2 flex items-center justify-center pr-1">
                                <img src="{{image}}" alt="{{name}}" class="max-w-full max-h-full object-contain" />
                            </div>

                            <!-- Right: Text with strict vertical structure -->
                            <div class="w-1/2 flex flex-col justify-between text-[10px] leading-tight text-center h-full"
                                style="font-size: {{cardFontSize ../rows ../cols}};">
                                <div>
                                    <h2 class="font-semibold break-words mb-1 line-clamp-2"
                                        style="font-size: {{cardNameFontSize name}};">
                                        {{name}}
                                    </h2>
                                    {{#if mrp}}
                                    {{#if (shouldShowDiscount mrp discount_type discount_value)}}
                                    <div class="text-green-600 font-bold text-xs">
                                        â‚¹{{calculateDiscount mrp discount_type discount_value}}
                                    </div>
                                    <div class="line-through text-gray-500 text-xs">â‚¹{{mrp}}</div>
                                    {{else}}
                                    <div class="text-green-600 font-bold text-xs">â‚¹{{mrp}}</div>
                                    {{/if}}
                                    {{/if}}
                                </div>

                                <!-- Ensure vertical spacing stays consistent even with less content -->
                                <div class="mt-auto">
                                    {{#if discount_type}}
                                    <div
                                        class="w-full bg-red-500 text-white text-[10px] font-bold text-center mt-1 px-1 py-1 rounded-b break-words leading-tight">
                                        <span style="font-size: {{adjustDiscountFontSize discount_value}}">
                                            {{formatDiscount discount_type discount_value}}
                                        </span>
                                    </div>
                                    {{else}}
                                    <div class="h-[20px] mt-1"></div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </main>

            <!-- Footer -->
            <footer class="h-[80px] border-t border-gray-200 px-4 pt-2 text-xs flex justify-between items-start">
                <div class="text-left">
                    <h2 class="text-blue-700 font-bold text-sm">PURANIC HEALTH MART</h2>
                    <p>No 17, Haripriya Nagar,<br />Moka Road, Ballari - 583101</p>
                </div>
                <div class="text-center">
                    <img src="{{../logo}}" alt="Logo" class="w-12 h-12 object-contain mx-auto" />
                </div>
                <div class="text-right">
                    <p class="text-green-700 font-bold text-sm">ðŸ“ž CONTACT <span class="text-black">9663525262</span>
                    </p>
                    <p class="text-red-600 font-bold text-xs">ðŸšš FOR FREE HOME DELIVERY</p>
                </div>
            </footer>
        </div>
        {{/each}}
    </body>

</html>